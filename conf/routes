# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                           controllers.Home.index

GET        /user/login                 controllers.Users.login
GET        /user/register              controllers.Users.register
POST       /user/registerPost          controllers.Users.registerPost
GET        /user/recover               controllers.Users.recover
POST       /user/recoverPost           controllers.Users.recoverPost
POST       /user/auth                  controllers.Users.auth
GET        /user/logout                controllers.Users.logout

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file               controllers.Assets.at(path="/public", file)

# Import admin module
->         /admin                      admin.Routes